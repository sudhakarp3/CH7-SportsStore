@using SportsStore.Domain.Entities
@model SportsStore.WebUI.Models.ProductsListViewModel

@model IEnumerable<Product>
@{
    ViewBag.Title = "Products";
}
@foreach (var p in Model.Products)
{
    <div>
        <h3>@p.Name</h3>
        @p.Description
        <h4>@p.Price.ToString("c")</h4>
    </div>
}